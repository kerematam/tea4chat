{
  "name": "server",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun run --watch --inspect --stack-trace-limit=100 src/index.ts",
    "dev:test": "NODE_ENV=test bun run --watch --inspect --stack-trace-limit=100 src/index.ts",
    "dev:debug": "NODE_ENV=development bun run --watch --inspect-brk --stack-trace-limit=100 src/index.ts",
    "dev:debug-full": "NODE_ENV=development NODE_OPTIONS='--stack-trace-limit=100 --trace-warnings --trace-uncaught' FORCE_COLOR=1 bun run --watch --inspect --stack-trace-limit=100 src/index.ts",
    "dev:cluster": "NODE_ENV=development bun run src/cluster.ts",
    "start": "NODE_ENV=production bun run src/cluster.ts",
    "build": "bun build src/index.ts --compile --minify --outfile dist/server && bun build src/cluster.ts --compile --minify --outfile dist/cluster",
    "build:server": "bun build src/index.ts --compile --minify --outfile dist/server",
    "build:cluster": "bun build src/cluster.ts --compile --minify --outfile dist/cluster",
    "start:bin": "NODE_ENV=production ./dist/cluster",
    "start:single": "NODE_ENV=production ./dist/server",
    "debug:redis": "bun run debug-redis-streams.js",
    "debug:redis:watch": "bun run --watch debug-redis-streams.js",
    "debug:redis:keys": "watch -n 2 'docker exec tea4chat-prod-redis-1 redis-cli KEYS \"stream:*\"'",
    "debug:redis:monitor": "docker exec -it tea4chat-prod-redis-1 redis-cli MONITOR",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest",
    "clean:port": "lsof -i :3000 | awk 'NR>1 {print $2}' | xargs kill -9"
  },
  "devDependencies": {
    "@trpc/client": "^11.1.2",
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@whatwg-node/fetch": "^0.10.7",
    "typescript": "^5.9.2",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@hono/node-server": "^1.14.2",
    "@hono/trpc-server": "^0.3.4",
    "@prisma/client": "^6.11.1",
    "@trpc/server": "^11.0.1",
    "@types/express": "^5.0.1",
    "@types/ioredis": "^4.28.10",
    "better-auth": "^1.2.8",
    "bullmq": "^5.56.0",
    "cors": "^2.8.5",
    "express": "^5.0.0",
    "hono": "^4.7.10",
    "hono-pino": "^0.8.0",
    "ioredis": "^5.6.1",
    "openai": "^5.3.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.11.1",
    "superjson": "^2.2.2",
    "zod": "^3.22.4"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  }
}
