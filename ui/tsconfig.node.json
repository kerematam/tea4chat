{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "es2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["../server/src/*"],
      "@/*": ["./src/*"]
    },
    "types": ["vite-plugin-terminal/node"]
  },

  "include": ["vite.config.ts"]
}
